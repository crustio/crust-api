{
    "version": "1.8.0",
    "compilerOptions": {
        "outDir": "build",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true 
    },
    "exclude": [ "build", "node_modules" ]
}